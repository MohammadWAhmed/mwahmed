  %section#contactme.container.content-section.text-center
    .contact-section.row
      .col-lg-8.col-lg-offset-2
        %h2 Contact
        %p 
          %a{:href => "mailto:wasiuddin.ahmed@hotmail.com"} wasiuddin.ahmed@hotmail.com
        %ul.list-inline.banner-social-buttons
          %li
            %a.btn.btn-default.btn-lg{:href => "https://github.com/MohammadWAhmed", :target => "blank"}
              %i.fa.fa-github.fa-fw
              %span.network-name Github
          %li
            %a.btn.btn-default.btn-lg{:href => "https://www.linkedin.com/in/mohahmed", :target => "blank"}
              %i.fa.fa-linked-in.fa-fw
              %span.network-name LinkedIn