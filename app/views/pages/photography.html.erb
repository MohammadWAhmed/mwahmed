<script type="text/javascript"> 
var index = 0;
var totalIndexes = parseInt("<%=j @html_strings.size.to_s%>");
var jsonString = "<%=j @html_strings_json %>";
var json = JSON.parse(jsonString);

var html_string = json[index.toString()];
initalImages();

function initalImages() {
  $("#img-row").html(html_string);
  return false;
}

function displayNextImages() {
  index = index+1;
  if (index <= totalIndexes) {
    var html_string = json[index.toString()];
    $("#img-row").empty();
    $("#img-row").html(html_string);    
  } else {
    index = totalIndexes;
  }

}

function displayPrevImages() {
  index = index-1;
  if (index > -1) {
    var html_string = json[index.toString()];
    $("#img-row").empty();
    $("#img-row").html(html_string);    
  } else {
    index = 0;
  }

}

</script>

<div id="gallery" class="container-fluid">
    <div id="img-row" class="row">
    </div>
    <hr>
    <div class="row">
      <button id="prv_btn" class="btn btn-large" onclick="displayPrevImages();return false;">Previous</button>
      <button id="nxt_btn" class="btn btn-large" onclick="displayNextImages();return false;">Next</button>
    </div>
    <hr>    
</div>
