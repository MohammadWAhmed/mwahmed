<div class="container fluid">
  <div class="row fluid">
    <div class="col-md-5">
      <h1>Message me </h1>
      <p>Send a quick message to get in touch</p>
      <%= form_for @message, url: contact_path do |message_form| %>
        <fieldset class="form-group">
          <div class="field">
            <%= message_form.text_field :name, placeholder: "Name", class: "form-control", required: "required" %>
          </div>
          <div class="field">
            <%= message_form.email_field :email, placeholder: "Email", class: "form-control", id: "exampleInputEmail2", required: "required"  %>
          </div>
          <div class="field">
            <%= message_form.text_area :content, size: "10x10", placeholder: "Message", class: "form-control", required: "required"  %>
          </div>
        </fieldset>
        <fieldset class="form-group">
          <div class="form-actions">
            <%= message_form.submit "Send", class:"btn btn-primary" %>
          </div>
        </fieldset>
      <% end %>
    </div>
    <div class="col-md-4">
      <h1>Social</h1>
      <a class="btn btn-custom" href="https://ca.linkedin.com/in/mohahmed" target="blank">
        <%= icon('linkedin', class: 'fa-5x') %>
      </a>
      <a class="btn btn-custom" href="https://500px.com/wasi7" target="blank">
        <%= icon('500px', class: 'fa-5x') %>
      </a>
    </div>
    <div class="col-md-3">
      <h1> Contact info </h1>
      <p> Mohammad Wasiuddin Ahmed </p>
      <p> wasiuddin.ahmed@hotmail.com </p>
      <p> 647 779 2161</p>

    </div>
  </div>
</div>